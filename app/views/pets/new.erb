<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <label>Name:</label><br>
  <input id="pet_name" type="text" name="pet[name]">

  <br><label>Owners:</label><br>
  <% @owners.all.each do |owner| %>
  <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>"> <%= owner.name %></input>
  <% end %>

  <br><label>And/Or assign new owner:</label><br>
  <input id="owner_name" type="text" name="owner[name]">
  <br>
  <input type="submit" name="" value="Create Pet">
</form>

